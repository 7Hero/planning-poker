{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "isolatedModules": true
  },
  "include": [
    "src"
  ]
}